<!DOCTYPE html>
<html lang="en">
<!-- header section -->
<%- include('layouts/header') -%>

  <body>
    <section id="navbar"><%- include('layouts/navbar') -%></section>
    <br>
    <section>
      <div class="d-flex justify-content-center text-center">

        <form action="/login/auth" method="POST">

          <label for="enterUsername" class="form-label">
            <h4 style="color: rgb(2, 62, 66);">LOGIN</h4>
          </label>
          <input type="email" class="form-control" name="username" placeholder="name@example.com" required />
          <label for="enterPassword" class="form-label"></label>
          <input type="password" class="form-control" name="password" placeholder="Password" required />
          <br>
          <input type="submit" value="Submit" />

        </form>


      </div>
    </section>

    <section id="footer"><%- include('./layouts/footer'); -%></section>

    <section id="scripts"><%- include('./layouts/scripts'); -%></section>
  </body>

</html>